{
  "name": "rewrite-gpt",
  "displayName": "Rewrite GPT",
  "description": "A Visual Studio Code extension that rewrites selected text using the OpenAI API.",
  "repository": {
    "type": "git",
    "url": "https://github.com/schmikolai/rewrite-gpt"
  },
  "publisher": "schmikolai",
  "license": "GPL-3.0-only",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rewrite-gpt.rewrite",
        "title": "Rewrite with GPT"
      },
      {
        "command": "rewrite-gpt.configureApiKey",
        "title": "Configure OpenAI API Key"
      },
      {
        "command": "rewrite-gpt.selectModel",
        "title": "Select OpenAI Model"
      }
    ],
    "keybindings": [
      {
        "command": "rewrite-gpt.rewrite",
        "key": "cmd+r",
        "when": "editorTextFocus"
      },
      {
        "command": "rewrite-gpt.rewrite",
        "key": "ctrl+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Rewrite GPT",
      "properties": {
        "rewrite-gpt.rewritePrompt": {
          "type": "string",
          "default": "Rewrite this code to improve clarity and efficiency.",
          "description": "The prompt sent to GPT when rewriting code."
        },
        "rewrite-gpt.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for the Rewrite GPT extension.",
          "scope": "application"
        },
        "rewrite-gpt.model": {
          "type": "string",
          "default": "",
          "examples": [
            "gpt-4.1",
            "gpt-4o-mini",
            "gpt-3.5-turbo"
          ],
          "description": "OpenAI model to use for rewriting text. Use the 'Select OpenAI Model' command to get a current list of available models."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "openai": "^5.10.1"
  }
}
